<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/categorybackground"
    tools:context=".AdminCategoryActivity">
    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="371dp"
        android:layout_height="82dp"
        android:layout_below="@+id/slogan_category"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-4dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sports_t_shirts"
            android:layout_width="105dp"
            android:layout_height="77dp"
            android:src="@drawable/wheet" />

        <ImageView
            android:id="@+id/female_dresses"
            android:layout_width="92dp"
            android:layout_height="86dp"
            android:src="@drawable/rice" />

        <ImageView
            android:id="@+id/sweathers"
            android:layout_width="110dp"
            android:layout_height="86dp"
            android:src="@drawable/vegitable" />

        <ImageView
            android:id="@+id/t_shirts"
            android:layout_width="104dp"
            android:layout_height="86dp"
            android:src="@drawable/chicken" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/glasses"
            android:layout_width="72dp"
            android:layout_height="80dp"
            android:src="@drawable/vegitableoil" />

        <ImageView
            android:id="@+id/purses_bags_wallets"
            android:layout_width="105dp"
            android:layout_height="80dp"
            android:src="@drawable/fruit" />

        <ImageView
            android:id="@+id/hats_caps"
            android:layout_width="97dp"
            android:layout_height="80dp"
            android:src="@drawable/sugercan" />

        <ImageView
            android:id="@+id/shoes"
            android:layout_width="92dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/fishfarm" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/headphones_handfree"
            android:layout_width="107dp"
            android:layout_height="80dp"
            android:src="@drawable/pulse" />

        <ImageView
            android:id="@+id/laptop_pc"
            android:layout_width="99dp"
            android:layout_height="80dp"
            android:src="@drawable/maze" />

        <ImageView
            android:id="@+id/watches"
            android:layout_width="102dp"
            android:layout_height="match_parent"
            android:src="@drawable/mushroom" />

        <ImageView
            android:id="@+id/mobilephones"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/egg" />

    </LinearLayout>

    <Button
        android:id="@+id/check_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/admin_logout_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimaryDark"
        android:text="Check New Orders"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:background="@color/colorPrimaryDark"
        android:text="Logout"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:textAllCaps="false"
        />

</RelativeLayout>